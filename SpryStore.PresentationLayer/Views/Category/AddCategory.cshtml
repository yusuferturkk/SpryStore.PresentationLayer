@model Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Ekleme Ekranı</h2>
<br />

<form method="post" class="form-group">
    @Html.HiddenFor(x => x.CategoryId)

    <label>Kategori Adı</label>
    <input type="text" asp-for="CategoryName" class="form-control" />
    <br />

    <label>Açıklama</label>
    <input type="text" asp-for="CategoryDescription" class="form-control" />
    <br />

    <label>Resim</label>
    <input type="text" asp-for="CategoryImage" class="form-control" />
    <br />

    <label>Durum</label>
    <input type="text" asp-for="CategoryStatus" class="form-control" />
    <br />

    <button class="btn btn-outline-primary">Kategori Ekle</button>
</form>