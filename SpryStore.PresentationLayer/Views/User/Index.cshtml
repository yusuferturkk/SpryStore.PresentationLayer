@model List<AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    img {
        border-radius: 50%;
    }
</style>

<h4>Kullanıcı Listesi</h4>
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Detaylar</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Roller</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><img src="@item.ImageUrl" style="width:80px;" /></td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/User/AssignRole/@item.Id" class="btn btn-outline-warning">Roller</a></td>
        </tr>
    }
</table>
