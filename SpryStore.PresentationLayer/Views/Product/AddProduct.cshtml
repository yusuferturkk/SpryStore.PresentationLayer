@model Product

@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Ürün Ekleme Ekranı</h2>
<br />

<form method="post" class="form-group">
    @Html.HiddenFor(x => x.ProductId)

    <label>Resim</label>
    <input type="text" asp-for="Image" class="form-control" />
    <br />

    <label>Ürün Adı</label>
    <input type="text" asp-for="ProductName" class="form-control" />
    <br />

    <label>Kategori</label>
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.value, new {@class="form-control"})
    <br />

    <label>Fiyat</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />

    <label>Açıklama</label>
    <textarea asp-for="Description" rows="5" class="form-control"></textarea>
    <br />

    <button class="btn btn-outline-primary">Ürün Ekle</button>
</form>