@model List<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <td>#</td>
        <td>Ürün Adı</td>
        <td>Kategori</td>
        <td>Fiyat</td>
        <td>Sil</td>
        <td>Güncelle</td>
        <td>Detaylar</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.ProductName</td>
            <td>@item.CategoryId</td>            
            <td>@item.Price</td>
            <td><a href="/Product/DeleteProduct/@item.ProductId/" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Product/UpdateProduct/@item.ProductId/" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Product/UpdateProduct/@item.ProductId/" class="btn btn-outline-info">Detaylar</a></td>
        </tr>
    }
</table>

<a href="/Product/AddProduct/" class="btn btn-outline-primary">Yeni Ürün Ekle</a>